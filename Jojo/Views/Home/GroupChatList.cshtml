<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Group Chat List</title>
    <style>
        .chat-button {
            display: block;
            margin: 10px;
            padding: 5px 10px;
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            text-decoration: none;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #333;
        }

        button {
            margin: 10px;
            padding: 5px 10px;
            background-color: #55b2d8;
            border: none;
            color: white;
            cursor: pointer;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            background-color: #fff;
            border: 1px solid #ccc;
            margin: 5px;
            padding: 10px;
        }

        form {
            margin-top: 10px;
        }

        label {
            display: block;
            font-weight: bold;
        }

        .modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 20px;
            border: 1px solid #ccc;
            z-index: 9999;
            width: 400px;
            height: 300px;
        }

        .dark-mode {
            background-color: #333;
            color: #fff;
        }

        .li {
            background-color: #fff;
            border: 1px solid #ccc;
            margin: 5px;
            padding: 10px;
        }

        .lip {
            word-wrap: break-word;
        }

    </style>
    <link rel="stylesheet" href="~/css/theme.css">
</head>
<body>
    <button onclick="location.href='/Home/ChatList?username=@ViewBag.Username'">Back to Chat List</button>
    <button onclick="openCreateGroupChatModal()">Create Group Chat</button>

    <div id="createGroupChatModal" class="modal">
        <h1>Create Group Chat</h1>
        <form id="createGroupChatForm" method="post">
            <label for="groupChatName">Group Chat Name:</label>
            <input type="text" id="groupChatName" name="groupChatName" />
            <input type="hidden" id="username" name="username" value="@ViewBag.Username" />
        </form>
        <button onclick="openCreateGroupChatModal()">Create Group Chat</button>
    </div>
    <button class="button" onclick="toggleDarkMode()">Toggle Dark Mode</button>

    <ul>
        @foreach (var groupChat in ViewBag.GroupChats)
        {
            <li class="li">
                <a class="chat-button" href="/Home/GroupChat?username=@ViewBag.Username&groupChatId=@groupChat.Id">@groupChat.Name</a>
                @if (groupChat.Users.Contains(ViewBag.Username))
                {
                    <p>Joined</p>
                }
                else
                {
                    <form method="post" action="/Home/JoinGroupChat">
                        <input type="hidden" name="username" value="@ViewBag.Username" />
                        <input type="hidden" name="groupChatId" value="@groupChat.Id" />
                        <button type="submit">Join</button>
                    </form>
                }
            </li>
        }

    </ul>
    <script src="~/js/theme.js"></script>
    <script>
        function openCreateGroupChatModal() {
            document.getElementById('createGroupChatModal').style.display = 'block';
        }

        document.getElementById('createGroupChatForm').addEventListener('submit', function (event) {
            event.preventDefault();

            let formData = new FormData(this);

            fetch('/Home/CreateGroupChat', {
                method: 'POST',
                body: formData
            })
                .then(response => {
                    if (response.ok) {
                        fetch('/Home/GroupChatList?username=' + formData.get('username'))
                            .then(response => response.text())
                            .then(data => {
                                document.body.innerHTML = data;
                            });
                    }
                });

            document.getElementById('createGroupChatModal').style.display = 'none';
        });

        document.addEventListener('keydown', function (event) {
            if (event.key === "Escape") {
                document.getElementById('createGroupChatModal').style.display = 'none';
            }
        });

    </script>
</body>
</html>
